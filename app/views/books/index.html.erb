<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>isbn13</th>
      <th>Description</th>
      <th>Cover image</th>
      <th>Total</th>
      <th>Available</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn13 %></td>
        <td><%= book.description %></td>
        <td><%= book.coverimage %></td>
        <td><%= book.instock_total %></td>
        <td><%= book.instock_now %></td>

        <td>
          <% book.authors.each do |author| %>
            <% if author.equal?(book.authors.last)%>
              <%= author.fullname %>
            <% else%>
              <%= author.fullname + ';'%>
            <% end %>          
          <% end %>          
        </td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
            <% if book.instock_now > 0 %>
              <%= check_box("loan", :loaned) %>

            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>BooksAgain</h2>

<%= form_with model: @book do |form| %>
  <%= form.text_field :title %>
  <%= form.text_field :isbn13 %>
  <%= check_box_tag :send_welcome_email %>
  <%= form.submit %>
<% end %>

<br>

<%= link_to 'New Book', new_book_path %>

<% console %>